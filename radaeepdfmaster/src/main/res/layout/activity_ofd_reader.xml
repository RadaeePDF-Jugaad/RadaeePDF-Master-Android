<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.radaee.reader.OFDGLLayoutView
        android:id="@+id/ofd_glview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"></com.radaee.reader.OFDGLLayoutView>

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DDFFFFFF"
        android:padding="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_search_input"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLines="1" />

        <CheckBox
            android:id="@+id/check_search_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/text_search_prev_label" />
        <!--<CheckBox
            android:id="@+id/check_match_whole_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/text_match_whole_word_label"/>
        <CheckBox
            android:id="@+id/check_match_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/text_match_case_label"/>-->
        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_select_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#99AAAAAA"
        android:padding="5dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/icon_copy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_copy"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>