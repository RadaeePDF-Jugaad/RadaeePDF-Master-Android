<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/text_merge_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:text="@string/text_merge_hint_label"/>
    <Button
        android:id="@+id/btn_dest_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_merge_hint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/dest_file_label"/>
    <Button
        android:id="@+id/btn_source_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_dest_file"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/source_file_label"/>
</RelativeLayout>